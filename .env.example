# OpenAlex Configuration
# Copy this file to .env and fill in your values

# Email for OpenAlex polite pool (faster API access - RECOMMENDED)
OPENALEX_EMAIL=your.email@example.com

# Output directory for all data
OPENALEX_OUTPUT_DIR=openalex_data

# Rate limiting (seconds between requests)
OPENALEX_REQUEST_DELAY=0.1
OPENALEX_DOWNLOAD_DELAY=0.5

# Results per page (max 200)
OPENALEX_PER_PAGE=200

# Logging
OPENALEX_LOG_LEVEL=INFO
# OPENALEX_LOG_FILE=openalex.log

# Download options
OPENALEX_SKIP_EXISTING_PDFS=true
OPENALEX_SAVE_INDIVIDUAL_METADATA=true
OPENALEX_INCLUDE_FULL_JSON_IN_PARQUET=true

# Parquet compression (snappy, gzip, brotli, zstd)
OPENALEX_PARQUET_COMPRESSION=snappy

# Validation
OPENALEX_VALIDATE_PDF_CONTENT_TYPE=true
OPENALEX_MAX_FILENAME_LENGTH=200

# Timeouts (seconds)
OPENALEX_REQUEST_TIMEOUT=30